{{#if erro}}
	<div class="alert alert-danger col-6 mx-auto text-center">{{erro}}</div>
{{/if}}

<div class="container h-100 d-flex flex-column">
	<header class="header p-2 row m-0">
		<span class="col-12 col-sm">Nome: {{nome}}</span>
		<span class="col-12 col-sm">Província: {{provincia}}</span>
		<span class="col-12 col-sm">Gênero: {{genero}}</span>
	</header>

	<div class="formulario-de-login form-group col-10 col-sm-5 m-auto p-4 py-5 p-sm-5 border bg-white">
		<h1 class="__titulo mb-4 pe-5">Sua rifa é:</h1>

		<p class="sua-rifa">{{rifaID}} - {{rifaNome}}</p>

	</div>
	
</div>